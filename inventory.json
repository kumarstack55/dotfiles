{
  "inventory": [
    {
      "os": "any",
      "action": "symlink",
      "path": ".ansible.cfg",
      "target": "dot.ansible.cfg"
    },
    {
      "os": "any",
      "action": "directory",
      "path": ".config"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".config/nvim",
      "target": "dot.config/nvim"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".config/pip",
      "target": "dot.config/pip"
    },
    {
      "os": "unix",
      "action": "directory",
      "path": ".ssh",
      "mode": "0700"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".bashrc_local.sh",
      "target": "dot.bashrc_local.sh"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".ctags",
      "target": "dot.ctags"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".editorconfig",
      "target": "dot.editorconfig"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".gitconfig",
      "target": "dot.gitconfig"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".hgrc",
      "target": "dot.hgrc"
    },
    {
      "os": "windows",
      "action": "symlink",
      "path": ".gitconfig_windows.inc",
      "target": "dot.gitconfig_windows.inc"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".gvimrc",
      "target": "dot.gvimrc"
    },
    {
      "os": "windows",
      "action": "symlink",
      "path": "_gvimrc",
      "target": "dot.gvimrc"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".inputrc",
      "target": "dot.inputrc"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".tmux.conf",
      "target": "dot.tmux.conf.lt_v2.1",
      "when": "tmux_vesion_lt_2pt1"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".tmux.conf",
      "target": "dot.tmux.conf.ge_v2.1",
      "when": "tmux_vesion_ge_2pt1"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".tmux.conf.all",
      "target": "dot.tmux.conf.all"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".vimrc",
      "target": "dot.vimrc"
    },
    {
      "os": "windows",
      "action": "symlink",
      "path": "AppData/Local/nvim",
      "target": "AppData/Local/nvim"
    },
    {
      "os": "any",
      "action": "symlink",
      "path": ".vim",
      "target": "dot.vim"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".bashrc.d",
      "target": "dot.bashrc.d"
    },
    {
      "os": "any",
      "action": "copy",
      "path": ".gitconfig_local.inc",
      "target": "dot.gitconfig_local.inc",
      "when": "path_not_exists"
    },
    {
      "os": "any",
      "action": "copy",
      "path": ".hgrc_local.ini",
      "target": "dot.hgrc_local.ini",
      "when": "path_not_exists"
    },
    {
      "os": "windows",
      "action": "copy",
      "path": "Documents/WindowsPowerShell/Microsoft.PowerShell_profile.ps1",
      "target": "Documents/WindowsPowerShell/Microsoft.PowerShell_profile.ps1",
      "when": "path_not_exists"
    },
    {
      "os": "windows",
      "action": "symlink",
      "path": ".powershellrc.ps1",
      "target": "dot.powershellrc.ps1"
    },
    {
      "os": "unix",
      "action": "symlink",
      "path": ".ssh/config",
      "target": "dot.ssh/config",
      "when": "path_not_exists"
    },
    {
      "os": "unix",
      "action": "copy",
      "path": ".bash_profile",
      "target": "dot.bash_profile",
      "when": "path_not_exists"
    },
    {
      "os": "unix",
      "action": "touch",
      "path": ".bashrc",
      "when": "path_not_exists"
    },
    {
      "os": "unix",
      "action": "lineinfile",
      "path": ".bashrc",
      "line": "source $HOME/.bashrc_local.sh"
    }
  ]
}
